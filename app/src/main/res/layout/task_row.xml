<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="#EDEBE8"
    android:paddingBottom="10dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Install Android Studio"
        android:id="@+id/taskTitleTextView"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/notebook_icon"
        android:id="@+id/imageView"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/taskTitleTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="Get copy from GSG Representative"
        android:id="@+id/taskNotesTextView"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Deadline: "
            android:id="@+id/taskDeadlineLabelTextView"
            android:layout_alignBottom="@+id/imageView"
            android:layout_toRightOf="@+id/imageView"
            android:layout_toEndOf="@+id/imageView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="March 02, 2015"
            android:id="@+id/taskDeadlineTextView"
            android:layout_alignTop="@+id/taskDeadlineLabelTextView"
            android:layout_toRightOf="@+id/taskDeadlineLabelTextView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/bisiesto_green"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="28dp"
        android:layout_centerHorizontal="true">

    </View>


</RelativeLayout>